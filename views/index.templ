package views

import "alnoor/todo-go-htmx"

templ Index(tasks []todo.Task) {
	@Layout() {
		<h1
			class="bg-sky-600 text-white font-bold
						 text-4xl leading-normal p-2 rounded mb-2"
		>مهام</h1>
		<ul class="h-4/6 overflow-y-scroll pl-2" id="list">
			for _, task := range tasks {
				@Task(task)
			}
		</ul>
		@InputForm(false)
	}
}
